<Window x:Class="RssReader.SubscriptionEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscription Editor" Height="auto" Width="auto" ResizeMode="CanResize" SizeToContent="WidthAndHeight">
  <Grid Name="GridWidget">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Name="ButtonContainer">
      <Button Click="Reset" Margin="2" Width="64">Reset</Button>
      <Button Click="OK" Margin="2" Width="64" IsDefault="True">OK</Button>
    </StackPanel>
  </Grid>
</Window>
